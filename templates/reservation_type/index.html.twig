    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_type in reservation_types %}
            <tr>
                <td>{{ reservation_type.id }}</td>
                <td>{{ reservation_type.nombre }}</td>
                <td>
                    <a href="{{ path('app_reservation_type_show', {'id': reservation_type.id}) }}">show</a>
