{% extends 'base.html.twig' %}

{% block title %}Periode index{% endblock %}

{% block body %}
    <h1>Periode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for periode in periodes %}
            <tr>
                <td>{{ periode.id }}</td>
                <td>{{ periode.dateDebut ? periode.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ periode.dateFin ? periode.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_periode_show', {'id': periode.id}) }}">show</a>
                    <a href="{{ path('app_periode_edit', {'id': periode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_periode_new') }}">Create new</a>
{% endblock %}
